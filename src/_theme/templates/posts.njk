<ul class="article-list">

    {% for post in collections.post | reverse %}
        <li class="article-list__item">
            <a href="{{ post.url }}" class="article-list__item-link">
                <svg class="heroicon article-list__icon" width="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path></svg>
                {{ post.data.title }}
            </a>
        </li>
    {% endfor %}

</ul>