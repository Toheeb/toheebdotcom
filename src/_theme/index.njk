---
permalink: "/"
layout: _page.njk
eleventyNavigation: 
    key: home
    order: -1
---

{% set contactPage = collections.all | eleventyNavigationBreadcrumb('contact', true) | last %}
{% set blogPage = collections.all | eleventyNavigationBreadcrumb('blog', true) | last %}
{% set subscribePage = collections.all | eleventyNavigationBreadcrumb('subscribe', true) | last %}
{% set productsPage = collections.all | eleventyNavigationBreadcrumb('products', true) | last %}

<main class="main-content">

    <header class="page__title">
        <h1 class="title">
            <author class="page__title-subject">
                <a class="title__subject cta-secondary" href="{{contactPage.url}}">{{site.name}}</a>
            </author>
            <span class="title__prep page__title-prep">on</span>
            <cite>
                <span class="title__object-product page__title-object-product">Product</span>
                <span class="title__object-design page__title-object-design">De<span class="title__object-design_step">velopment</span></span>
            </cite>
        </h1>
    </header>

    <p class="description page__description" role="main">
        <span class="description__part">
            <a href="{{productsPage.url}}" class="cta-secondary">Making</a> products. 
        </span>
        
        <span class="description__part">
            <a href="{{blogPage.url}}" class="cta-secondary">Writing</a> about the process. 
        </span>

        <span class="description__part">
            <a href="{{subscribePage.url}}" class="cta-secondary">Sharing</a> most helpful resources I find on Product Development.
        </span>
    </p>

</main>

<div aria-hidden="true">
    {% set signatureClass ="signature_bg" %}
    {% include "signature.njk" %}
</div>